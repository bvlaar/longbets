<h1>Listing bets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Reminder</th>
    <th>Details</th>
    <th>Sent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bets.each do |bet| %>
  <tr>
    <td><%= bet.name %></td>
    <td><%= bet.email %></td>
    <td><%= bet.reminder %></td>
    <td><%= bet.details %></td>
    <td><%= bet.sent %></td>
    <td><%= link_to 'Show', bet %></td>
    <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
    <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

